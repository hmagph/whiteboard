script.backgroundSelectTemplate(type="x-handlebars-template")
  .backgroundSelect
    .group
    h2 Background

    .group.select
      p Select background
      input.backgroundInput(type="file", value="Select")
    // Use camera directly:
    // input.backgroundInput(type="file", value="Select", accept="image/*;capture=camera")

    .group.delete
      p Remove background from the drawing
      button.backgroundDelete Delete

    .group.resize
      p Background seems to be very big. Tap to make it smaller
      button.backgroundResize Resize

